[advice]
	statusHints = false
	detachedHead = false

[alias]
	st = status
	hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
	incoming = "!git remote update -p; git log ..@{u}"
	outgoing = log @{u}..

[color]
	ui = auto
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	grep = auto

[checkout]
	workers = 0

[commit]
	gpgsign = on

[core]
	editor = nvim
	excludesFile = ~/.config/git/ignore
	#pager = delta

[credential]
	helper = cache

[diff]
	algorithm = histogram
	colorMoved = default
	compactionheuristic = true
	submodule = log

[init]
	defaultBranch = main

[interactive]
	#diffFilter = delta --color-only

[pull]
	ff = only
	twohead = ort

[push]
	default = simple

[status]
	short = true

[tag]
	gpgSign = true

[user]
	name = Peter Grayson
	email = pete@jpgrayson.net

###

[delta]
	navigate = true
	# side-by-side = true
	syntax-theme = 1337
	plus-style = "syntax #007000"

[github]
	user = jpgrayson

[stgit]
	gpgsign = false
	#diff-opts = --find-renames --find-copies --color-moved --color-moved-ws=allow-indentation-change

[stgit "color"]
	applied = "blue white reverse no-reverse "
[stgit "alias"]
	st = !git status -s
