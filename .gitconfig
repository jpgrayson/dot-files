[advice]
	statusHints = false
[alias]
	st = status
	hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
	incoming = "!git remote update -p; git log ..@{u}"
	outgoing = log @{u}..
[user]
	name = Peter Grayson
	email = pete@jpgrayson.net
[github]
	user = jpgrayson
[credential]
	helper = cache
[color]
	ui = auto
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	grep = auto
[push]
	default = simple
[diff]
	algorithm = histogram
	submodule = log
	compactionheuristic = true
[status]
	short = true
[core]
	editor = nvim
[pull]
	ff = only
[stgit]
	#diff-opts = --find-renames --find-copies --color-moved --color-moved-ws=allow-indentation-change
