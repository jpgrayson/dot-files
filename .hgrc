[ui]
username = Peter Grayson <pete@jpgrayson.net>
merge = kdiff3
ignore = ~/.hgignore

[extensions]
### churn=
color=
convert=
extdiff=
hgk=
mq=
purge=
rebase=
progress=
bookmarks=
### reviewboard=~/project/mercurial-reviewboard
### mqext=~/code/mqext

[pager]
pager = less -RFX

[diff]
showfunc = True
git = True
nodates = True

[extdiff]
cmd.meld = meld
cmd.vimdiff = vimdiff

[alias]
unmerge = update -C -r .
qrefresh = qrefresh --git
qnew = qnew --git
qimport = qimport --git
qdiff = qdiff --git
diff = diff --git
postreview = postreview --git

[tortoisehg]
vdiff = meld

[reviewboard]
explicit_publish_update = True

[color]
qseries.unapplied = bold

[mqext]
mqcommit = auto
